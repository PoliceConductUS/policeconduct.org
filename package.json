{
  "name": "policeconduct.org",
  "type": "module",
  "version": "0.0.1",
  "scripts": {
    "astro": "astro",
    "build": "GIT_COMMIT_SHA=${GIT_COMMIT_SHA:-$(git rev-parse --short=12 HEAD)} GIT_COMMIT_DIRTY=${GIT_COMMIT_DIRTY:-$(if git diff --quiet HEAD -- && [ -z \"$(git ls-files --others --exclude-standard)\" ]; then echo 0; else echo 1; fi)} astro build",
    "dev": "astro dev",
    "deploy:prod": "bash scripts/deploy-prod.sh",
    "deploy:preview": "bash scripts/deploy-preview.sh",
    "format": "prettier --write .",
    "preview": "astro preview"
  },
  "dependencies": {
    "@astrojs/sitemap": "^3.7.0",
    "@netlify/blobs": "^7.0.0",
    "aos": "^2.3.4",
    "astro": "^6.0.0-beta.1",
    "bootstrap": "^5.3.3",
    "dotenv": "^16.4.5",
    "pg": "^8.12.0"
  },
  "devDependencies": {
    "@astrojs/check": "^0.9.6",
    "@types/pg": "^8.16.0",
    "prettier": "^3.8.1",
    "prettier-plugin-astro": "^0.14.1"
  }
}
