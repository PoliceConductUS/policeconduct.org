---
import SiteLayout from "../../layouts/SiteLayout.astro";

const documents = [
  {
    slug: "acceptable-use",
    title: "Acceptable Use Policy",
    summary: "What is and is not allowed when interacting with our platform.",
    category: "Use of services",
  },
  {
    slug: "comment-policy",
    title: "Comment Policy",
    summary: "Rules and moderation standards for comments.",
    category: "Use of services",
  },
  {
    slug: "community-guidelines",
    title: "Community Guidelines",
    summary: "Expectations for contributors, reporters, and commenters.",
    category: "Use of services",
  },
  {
    slug: "cookie",
    title: "Cookie Policy",
    summary: "Cookies and tracking technologies used on this site.",
    category: "Privacy",
  },
  {
    slug: "data-subject-access-request",
    title: "Data Subject Access Request",
    summary: "How to request, export, or delete personal data.",
    category: "Privacy",
  },
  {
    slug: "disclaimer",
    title: "Disclaimer",
    summary: "Scope of information provided and limits of liability.",
    category: "Notices",
  },
  {
    slug: "eula",
    title: "End User License Agreement",
    summary: "License terms for any software or downloads we provide.",
    category: "Core terms",
  },
  {
    slug: "privacy",
    title: "Privacy Policy",
    summary: "How we collect, use, and protect data shared with us.",
    category: "Privacy",
  },
  {
    slug: "refund",
    title: "Refund Policy",
    summary: "How refunds are handled for paid services or donations.",
    category: "Transactions",
  },
  {
    slug: "terms-of-service",
    title: "Terms of Service",
    summary: "Rules for using PoliceConduct.org and the services we offer.",
    category: "Core terms",
  },
];
---

<SiteLayout
  title="Legal Notices | PoliceConduct.org"
  description="All legal notices, policies, and agreements that govern use of PoliceConduct.org."
  pagePath="/legal-notice/"
>
  <main>
    <section class="py-vh-3 bg-gray-100 border-bottom border-dark">
      <div class="container">
        <div class="row g-4 align-items-end">
          <div class="col-12 col-lg-8">
            <p class="text-uppercase small text-muted mb-2">Legal Center</p>
            <h1 class="display-4 fw-bold">Legal Notices</h1>
            <p class="lead text-muted mb-0">
              The definitive source for our terms, policies, and required
              notices. Start here when you need the official word on how
              PoliceConduct.org operates.
            </p>
          </div>
          <div class="col-12 col-lg-4">
            <div class="card shadow-sm rounded-0 border-dark h-100">
              <div class="card-body d-flex flex-column gap-3">
                <div class="text-uppercase small text-muted">Need help?</div>
                <div class="d-grid gap-2">
                  <a
                    class="btn btn-dark rounded-0"
                    href="/about/contact?whoami=partner&message=I%20have%20a%20question%20about%20your%20legal%20policies."
                  >
                    Contact the team
                  </a>
                  <a
                    class="btn btn-outline-dark rounded-0"
                    href="/legal-notice/data-subject-access-request/"
                  >
                    Submit a data request
                  </a>
                </div>
                <p class="text-muted small mb-0">
                  Looking for a printable copy? Each notice includes a
                  last-updated date and is easy to share.
                </p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <section class="py-vh-2">
      <div class="container">
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-3">
          {
            documents.map((doc) => (
              <div class="col">
                <article class="card h-100 shadow-sm border-0 rounded-0">
                  <div class="card-body d-flex flex-column gap-3">
                    <div class="d-flex align-items-center justify-content-between">
                      <span class="badge bg-dark rounded-0">
                        {doc.category}
                      </span>
                      <span class="text-muted small">
                        /legal-notice/{doc.slug}/
                      </span>
                    </div>
                    <div>
                      <h2 class="h5 mb-2">
                        <a
                          class="link-dark text-decoration-none stretched-link"
                          href={`/legal-notice/${doc.slug}/`}
                        >
                          {doc.title}
                        </a>
                      </h2>
                      <p class="text-muted mb-0">{doc.summary}</p>
                    </div>
                  </div>
                </article>
              </div>
            ))
          }
        </div>
      </div>
    </section>
  </main>
</SiteLayout>
